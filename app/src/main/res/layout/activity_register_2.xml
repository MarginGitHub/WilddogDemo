<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginTop="136dp"
        android:textSize="30sp"
        android:textColor="#0A54A4"
        android:text="设置密码"
        />
    <AutoCompleteTextView
        android:id="@+id/pwd1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="185dp"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/lock"
        android:drawableEnd="@drawable/eyecl"
        android:textSize="14sp"
        android:textColorHint="#C0C0C0"
        android:hint="密码"/>
    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwd1"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:background="#eeeeee"/>
    <AutoCompleteTextView
        android:id="@+id/pwd2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/lock2"
        android:textSize="14sp"
        android:textColorHint="#C0C0C0"
        android:hint="确认密码"/>
    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwd2"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:background="#eeeeee"/>
    <Button
        android:id="@+id/submit"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="19dp"
        android:background="#0069B4"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="提交"/>

</android.support.constraint.ConstraintLayout>